<script>
    require(['prototype'], function(){

//<![CDATA[
        function updateProfileConfigs() {
            new Ajax.Request('<?php echo $block->getAjaxUrl() ?>', {
                onSuccess: function(response) {
                    try {
                        if (response.responseText != 'false' && response.responseText.isJSON()) {
                            response = response.responseText.evalJSON();
                            if (response.success == true) {
                                location.reload();
                            } else {
                                alert(response.errormessage);
                            }
                        } else {
                            alert('<?php echo __('An unknown error occured.'); ?>');
                        }
                    } catch (e) {
                        alert('<?php echo __('An unknown exception was thrown.'); ?>');
                    }
                }
            });
        }

        window.updateProfileConfigs = updateProfileConfigs;
//]]>

    });
</script>
<div class="actions actions-validate-vat">
    <div id="validation_result" class="message-validation hidden"></div>
    <button onclick="javascript:updateProfileConfigs(); return false;" class="action-validate-vat" type="button">
        <span><?php echo $block->escapeHtml(__('Refresh Ratepay Shop-IDs')) ?></span>
    </button>
</div>
