<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="img-src">
            <values>
                <value id="payone_payone" type="host">cdn.pay1.de</value>
                <value id="payone_paypal" type="host">www.paypal.com</value>
                <value id="payone_paypal_objects" type="host">www.paypalobjects.com</value>
                <value id="payone_klarna" type="host">x.klarnacdn.net</value>
                <value id="payone_amazon_cloud" type="host">*.cloudfront.net</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="payone_payone_secure" type="host">secure.pay1.de</value>
                <value id="payone_ratepay" type="host">d.ratepay.com</value>
                <value id="paypal_amazon" type="host">static-eu.payments-amazon.com</value>
                <value id="payone_klarna_js" type="host">x.klarnacdn.net</value>
                <value id="payone_klarna_js2" type="host">cdn.klarna.com</value>
                <value id="payone_jsctool_script" type="host">www.jsctool.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="payone_ratepay_css" type="host">d.ratepay.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="payone_payone_frame" type="host">secure.pay1.de</value>
                <value id="payone_amazon_payments" type="host">payments.amazon.de</value>
                <value id="payone_jsctool_frame" type="host">www.jsctool.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="payone_amazon_payments" type="host">payments.amazon.de</value>
                <value id="payone_ratepay_connect" type="host">d.ratepay.com</value>
                <value id="payone_jsctool_connect" type="host">www.jsctool.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
