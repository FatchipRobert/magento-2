<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="payone_google_pay" translate="label" type="text" sortOrder="425" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Google Pay</label>
        <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enabled</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/payone_google_pay/active</config_path>
        </field>
        <field id="title" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Title</label>
            <config_path>payment/payone_google_pay/title</config_path>
        </field>
        <field id="order_status" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>New Order Status</label>
            <source_model>Magento\Sales\Model\Config\Source\Order\Status\NewStatus</source_model>
            <config_path>payment/payone_google_pay/order_status</config_path>
        </field>
        <field id="instructions" translate="label" type="textarea" sortOrder="62" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Instructions</label>
            <config_path>payment/payone_google_pay/instructions</config_path>
        </field>
        <field id="google_pay_merchant_id" translate="label,comment" type="text" sortOrder="65" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>GooglePay MerchantId</label>
            <config_path>payment/payone_google_pay/google_pay_merchant_id</config_path>
            <comment>Needed for Live mode.</comment>
        </field>
        <field id="store_name" translate="label,comment" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Store Name</label>
            <config_path>payment/payone_google_pay/store_name</config_path>
            <comment>Will be displayed in Google Pay payment window. Store name from general config will be used if not given.</comment>
        </field>
        <field id="min_order_total" translate="label" type="text" sortOrder="98" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Minimum Order Total</label>
            <config_path>payment/payone_google_pay/min_order_total</config_path>
        </field>
        <field id="max_order_total" translate="label" type="text" sortOrder="99" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Maximum Order Total</label>
            <config_path>payment/payone_google_pay/max_order_total</config_path>
        </field>
        <field id="sort_order" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Sort Order</label>
            <config_path>payment/payone_google_pay/sort_order</config_path>
        </field>
        <include path="Payone_Core::system/default_fields.xml"/>
    </group>
</include>
